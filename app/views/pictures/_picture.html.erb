<!-- INDIVIDUAL IMAGE -->
<div class="image-wrapper">

<div class="insta-img">
  <%= image_tag("#{picture.url}", width: "500") %>
</div>

<div class="bottom-content">
  <%= render partial: 'like', locals: {picture: picture} %>

  <div class="user">
    <div><%= image_tag("#{picture.user.profile_pic}", width: "50") %></div>
    <div class="description">
      <div>
        <strong><%= picture.user.name %></strong> 
        <%= picture.description %>
      </div>
    </div>
  </div> <!-- end user -->

</div> <!-- end bottom-content -->

</div><!-- end INDIVIDUAL IMAGE -->